.address-main
  .address-main__head
    住所入力
  .address-main__content
    .address-main__content_name
      %label お名前
      %span 必須
      %input{:placeholder => "例)山田", :type => "text"}
      %input{:placeholder => "例)孝之", :type => "text"}
    .address-main__content_kana
      %label お名前カナ
      %span 必須
      %input{:placeholder => "例)ヤマダ", :type => "text"}
      %input{:placeholder => "例)タカユキ", :type => "text"}
    .address-main__content_postal
      %label 郵便番号
      %span 必須
      %input{:placeholder => "例)123−4567", :type => "text"}
    .address-main__content_prefectures
      %label 都道府県
      %span 必須
      %input{:placeholder => "例)大阪", :type => "text"}
    .address-main__content_town
      %label 市区町村
      %span 必須
      %input{:placeholder => "例)中央区難波", :type => "text"}
    .address-main__content_number
      %label 番地
      %span 必須
      %input{:placeholder => "例)5丁目1-60", :type => "text"}
    .address-main__content_building
      %label 建物名
      %span_free 任意
      %input{:placeholder => "例)なんばスカイオ15階", :type => "text"}
    .address-main__content_tell
      %label 電話
      %span_free 任意
      %input{:placeholder => "例）090-1234-5678", :type => "text"}
    .address-main__content_btn
      次に進む

